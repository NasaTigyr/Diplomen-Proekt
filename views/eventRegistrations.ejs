<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Registrations - Martial Arts Competitions</title>
  <link rel="stylesheet" href="/styleIndex.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header', {currentPage: 'profile', user: user}); %>

  <div class="container mt-5">
    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1>Registrations for "<%= eventName %>"</h1>
      </div>
      <div>
        <a href="/manageEvent/<%= eventId %>" class="btn btn-primary">
          <i class="fas fa-arrow-left"></i> Back to Event Management
        </a>
      </div>
    </div>

    <!-- Success message -->
    <% if (typeof req !== 'undefined' && req.query && req.query.success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= req.query.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Error message -->
    <% if (typeof req !== 'undefined' && req.query && req.query.error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= req.query.error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Filters -->
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Filter Registrations</h5>
      </div>
      <div class="card-body">
        <form method="get" action="/event/<%= eventId %>/registrations">
          <div class="row">
            <div class="col-md-4 mb-3">
              <label class="form-label">Status</label>
              <select class="form-select" name="status">
                <option value="" selected>All Statuses</option>
                <option value="pending">Pending</option>
                <option value="approved">Approved</option>
                <option value="rejected">Rejected</option>
              </select>
            </div>
            <div class="col-md-4 mb-3">
              <label class="form-label">Sort By</label>
              <select class="form-select" name="sort">
                <option value="date_desc" selected>Registration Date (Newest First)</option>
                <option value="date_asc">Registration Date (Oldest First)</option>
                <option value="name_asc">Athlete Name (A-Z)</option>
                <option value="name_desc">Athlete Name (Z-A)</option>
              </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
              <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Registrations Table -->
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Registrations (<%= registrations.length %>)</h5>
      </div>
      <div class="card-body">
        <% if (registrations.length === 0) { %>
          <div class="alert alert-info">No registrations found for this event.</div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Athlete</th>
                  <th>Category</th>
                  <th>Registration Date</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% registrations.forEach(registration => { %>
                  <tr>
                    <td><%= registration.id %></td>
                    <td>
                      <strong><%= registration.first_name %> <%= registration.last_name %></strong><br>
                      <small class="text-muted"><%= registration.email %></small>
                    </td>
                    <td><%= registration.category_name %></td>
                    <td><%= new Date(registration.registration_date).toLocaleString() %></td>
                    <td>
                      <% if (registration.status === 'pending') { %>
                        <span class="badge bg-warning text-dark">Pending</span>
                      <% } else if (registration.status === 'approved') { %>
                        <span class="badge bg-success">Approved</span>
                      <% } else if (registration.status === 'rejected') { %>
                        <span class="badge bg-danger">Rejected</span>
                      <% } %>
                    </td>
                    <td>
                      <div class="btn-group">
                        <form method="post" action="/registration/<%= registration.id %>/update-status" class="me-1">
                          <input type="hidden" name="eventId" value="<%= eventId %>">
                          <input type="hidden" name="status" value="approved">
                          <button type="submit" class="btn btn-sm btn-success" <%= registration.status === 'approved' ? 'disabled' : '' %>>
                            Approve
                          </button>
                        </form>
                        <form method="post" action="/registration/<%= registration.id %>/update-status">
                          <input type="hidden" name="eventId" value="<%= eventId %>">
                          <input type="hidden" name="status" value="rejected">
                          <button type="submit" class="btn btn-sm btn-danger" <%= registration.status === 'rejected' ? 'disabled' : '' %>>
                            Reject
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <footer class="bg-light text-center py-3 mt-5">
    <p>&copy; 2025 Martial Arts Competitions. All Rights Reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
